<%- include("../partials/header") %>

  <% if(currentUser && currentUser.isAdmin){ %>
	<h1>
		You are an Admin!
	</h1>
	<%	} %>   

	<header class="jumbotron">
		<h1>Welcome to YelpCamp!</h1>
		<p>Enjoy the campgrounds from all over the world!</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new Campground!</a>
			</p>
			<p>
          	 	<form action="/campgrounds" method="GET" class="form-inline">
               		<div class="form-group">
                  		 <input type="text" name="search" placeholder="Campground search..." class="form-control">
                   		<input type="submit" value="Search" class="btn btn-default">
               		</div>
           		</form>
       		 </p>
	</header>
	
	<div id="align" class="row text-center" style="display: flex; flex-wrap: wrap;">
		<div class="col-md-12">
            <% if(noMatch !== null) { %>
            <h3><%= noMatch %></h3>
			<% } %>
		</div>	
		<% campgrounds.forEach(function(campground){ %>
	       <div class="col-md-3 col-sm-6">
				<div class="thumbnail">
			        <img src="<%= campground.image %>">
					<div class="caption">
						  <h2><%= campground.name %></h2>
					</div>
					<p>
						<a href="/campgrounds/<%=campground._id %>" class="btn btn-primary">More Info</a>
					</p>
				</div>
		
			</div>	
        <% }); %>
	</div>

<%- include("../partials/footer") %>